---
const currentPath = Astro.url.pathname;

import { Github, Instagram, Linkedin, Twitter } from "lucide-astro";

const socials = [
  {
    name: "GitHub",
    href: "https://github.com/jacc",
    icon: Github,
  },
  {
    name: "Twitter",
    href: "https://twitter.com/1afond",
    icon: Twitter,
  },
  {
    name: "LinkedIn",
    href: "https://linkedin.com/in/jacklafond",
    icon: Linkedin,
  },
  {
    name: "Instagram",
    href: "https://instagram.com/jlaf",
    icon: Instagram,
  },
];

const navLinks = [
  {
    name: "Jack",
    href: "/",
  },
  {
    name: "Projects",
    href: "/projects",
  },
  {
    name: "Words",
    href: "/words",
  },
  {
    name: "Other things",
    href: "/misc",
  },
];
---

<div class="grid md:flex justify-between">
  <div class="flex gap-1">
    {
      navLinks.map((link) => {
        return (
          <a
            href={link.href}
            class={`flex items-center text-gray-10 hover:text-gray-12 hover:bg-gray-4 p-1 pr-2 pl-2 rounded-lg transition-colors duration-200 ${
              currentPath === link.href ? "bg-gray-4 text-gray-12" : ""
            }`}
            transition:animate="fade"
          >
            {link.name}
          </a>
        );
      })
    }
  </div>
  <div class="flex gap-3">
    {
      socials.map((social) => {
        return (
          <a
            href={social.href}
            class="flex items-center gap-2 text-gray-10 hover:text-gray-12 transition-colors duration-200"
          >
            {social.name}
          </a>
        );
      })
    }
  </div>
</div>
